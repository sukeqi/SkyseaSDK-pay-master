<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_window_focused="false">
        <shape >
	        <corners android:radius="10dp" />
			<gradient android:angle="90" android:endColor="#CC4242" android:centerColor="#D74747" android:startColor="#F45955" />
			<stroke android:width="1dp" android:color="#F45955" />
		</shape>
    </item>
    
    <item android:state_pressed="true">
        <shape>
	        <corners android:radius="10dp" />
			<gradient android:angle="90" android:type="linear" android:endColor="#f1f1f1" android:startColor="#eeeeee" />
			<stroke android:width="1px" android:color="#969696" />
		</shape>
    </item>

</selector>